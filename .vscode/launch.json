{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cmd",
      "cwd": "${workspaceFolder}",
      "args": [
        "--log-level=debug",
        "--cert=certs/tls.crt",
        "--key=certs/tls.key",
      ],
      "showLog": true,
      "env": {
        "GODEBUG": "http2debug=0"
      }
    }
  ]
}
